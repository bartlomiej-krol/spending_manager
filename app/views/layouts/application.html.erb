    <link rel="stylesheet" href="/style/general.css">
    <link rel="stylesheet" href="/style/framework.css">
    <link rel="stylesheet" href="/style/site.css">
    <link rel="stylesheet" href="/style//prettyPhoto.css" type="text/css" media="screen"
        title="prettyPhoto main stylesheet" charset="utf-8" />
    <script src="/js/modernizr-2.0.6.min.js" type="text/javascript"></script>
</head>
<body>
    <div class="mother">
        <header class="mast-head stack-fixed clearfix">
      
      <article class="logo">
        <a href="index.html"></a>
      </article>
      
      <nav class="main-nav">
      
        <ul>
          <li class="first"><%= link_to 'Główna', root_path, :class => (current_page?(root_path) ? "selected" : "") %></li>
        <% if user_signed_in? %>
          <li class=""><%= link_to 'Listy wydatków', lists_path, :class => (current_page?(lists_path) ? "selected" : "")  %></li>
          <li class=""><%= link_to 'Statystyki', statistics_index_path, :class => (current_page?(statistics_index_path) ? "selected" : "")  %></li>
          <li class=""><i class="icon-user"></i><%= link_to 'Profil', edit_user_registration_path, :class => (current_page?(edit_user_registration_path) ? "selected" : "")  %></li>
          <li class=""><i class="icon-book"></i><%= link_to "(#{@user_reminders.count})", reminders_path, :class => (current_page?(reminders_path) ? "selected" : "")  %></li>
          <li class="last"><%= link_to 'Wyloguj', destroy_user_session_path, :method => :delete %></li>
        <% else %>
          <li class=""><%= link_to 'Rejestracja', new_user_registration_path, :class => (current_page?(new_user_registration_path) ? "selected" : "")  %></li>
          <li class="last"><%= link_to 'Zaloguj', new_user_session_path, :class => (current_page?(new_user_session_path) ? "selected" : "")  %></li>
        <% end %>
        </ul>
        
      </nav><!-- end .main-nav -->
      
    </header>
<article class="main" role="main">
<div class="home-hero">
  <div class="top-mast">

    <div class="content">
      <div class="infos">
        <p class="notice"><%= flash[:notice]  %></p>
        <p class="alert"><%= flash[:alert] %></p>
      </div>

      <%= yield %>

    </div>   
     
  </div>
</div>


</article>

        <section class="stack-fixed entry-text footer clearfix">
  
  
  <ul class="slat-8 first">
      
    <li>
          <p>
            Zarządzaj swoimi wydatkami razem z nami! Twórz listy, dodawaj pozycje oraz obserwuj statystyki. Żadnych zbędnych funkcji!
          </p>
            
        </li>
    
  </ul>  
  
  <ul class="slat-4 last">
    <li><i class="icon-envelope"></i> <a href="mailto:contact@expenses_manager.com">contact@expenses_manager.com</a></li>
  </ul>
  
</section>
    </div>
